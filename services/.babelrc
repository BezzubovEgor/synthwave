{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "node": "current"
                }
            }
        ]
    ],
    "plugins": [
        [
            "module-resolver",
            {
                "root": ["./src"],
                "alias": {
                    "@api": "./src/api",
                    "@logger": "./src/api/services/logger.service.js",
                    "@controllers": "./src/api/controllers",
                    "@middlewares": "./src/api/middlewares",
                    "@models": "./src/api/models",
                    "@routes": "./src/api/routes",
                    "@services": "./src/api/services",
                    "@utils": "./src/api/utils",
                    "@assets": "./src/assets",
                    "@config": "./src/config",
                    "@views": "./src/views"
                }
            }
        ]
    ]
}
